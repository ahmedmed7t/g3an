<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_orderPlateImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/image"
        android:layout_margin="8dp"
        android:background="@drawable/green_circle"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/fragment_orderPlates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/droidsansarabic"
        android:text="فطار مميز    بيتزا    بطاطس"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_orderPlateImage"
        app:layout_constraintVertical_bias=".4"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/fragment_orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17 / 07 / 2018 "
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
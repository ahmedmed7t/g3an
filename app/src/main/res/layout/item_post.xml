<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/post_cotainer">

    <ImageView
        android:id="@+id/plate_image"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chief_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/green_circle"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_chiefName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/arlrdbd"
        android:text="Ali Adel"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toEndOf="@+id/chief_image"
        app:layout_constraintTop_toBottomOf="@+id/plate_image" />


    <TextView
        android:id="@+id/txt_Ncomment"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/arlrdbd"
        android:text="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plate_image"
        app:layout_constraintVertical_bias="0.635" />

    <ImageView
        android:id="@+id/img_comment"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="168dp"
        app:layout_constraintEnd_toEndOf="@id/txt_Ncomment"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/comment" />

    <TextView
        android:id="@+id/Nlove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arlrdbd"
        android:text="40"
        app:layout_constraintEnd_toStartOf="@id/txt_Ncomment"
        app:layout_constraintTop_toBottomOf="@id/plate_image"
        android:layout_marginRight="52dp" />

    <ImageView
        android:id="@+id/love"
        android:layout_width="32dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="182dp"
        android:src="@drawable/love"
        app:layout_constraintEnd_toEndOf="@id/Nlove"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/chief_image">


        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="9"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/black_border"
            android:hint="@string/write_a_comment"
            android:padding="7dp" />

        <ImageView
            android:id="@+id/mylove"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/love" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
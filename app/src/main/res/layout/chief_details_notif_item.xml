<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/DN_plate_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/image"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/DN_plate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="فطار مميز"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/DN_plate_image"

        />

    <TextView
        android:id="@+id/DN_plate_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31 جـ"
        android:textColor="@android:color/black"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/DN_plate_image"
        app:layout_constraintTop_toBottomOf="@id/DN_plate_name"

        />

    <TextView
        android:id="@+id/DN_plate_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 د"
        android:textColor="@android:color/black"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/DN_plate_image"
        app:layout_constraintTop_toBottomOf="@id/DN_plate_price"
        />


    <TextView
        android:id="@+id/DN_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginRight="20dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>